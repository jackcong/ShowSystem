}
<!DOCTYPE html>
<html>
<head>
    <title>Sign In</title>
    <META HTTP-EQUIV="Pragma" CONTENT="no-cache">
    <META HTTP-EQUIV="Cache-Control" CONTENT="no-cache">
    <META HTTP-EQUIV="Expires" CONTENT="0">

    @Styles.Render("~/logincss")
    <script src="@Url.Content("~/bower_components/jquery/dist/jquery.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/bower_components/jquery.validation/dist/jquery.validate.min.js")" type="text/javascript"></script>
