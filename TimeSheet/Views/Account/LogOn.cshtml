            @Html.Partial("~/Views/Account/LogOnPartial.cshtml")
        </div>
    </div>
    <div class="divFooter">
            © 2008-@DateTime.Now.Year.ToString() T2VSoft, Inc. All Rights Reserved.&nbsp;Version:1.0.0(201607151520)
